@model IEnumerable<JewelryStore.Models.OrderEntity>

@{
    ViewBag.Title = "ListOrderClient";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Orderdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deliverydate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.EmailAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Orderdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deliverydate)
            </td>

            <td>
                @if (item.Status == true)
                {
                    <p>delivery</p>
                }
                else
                {
                    <p>UnActive</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.EmailAddress)
            </td>
            <td>	@Html.ActionLink("Cancel", "CancelOrder", new { id = item.ID })</td>

            <td>



                <button type="button" class="pest_btn" data-toggle="collapse" data-target="#@item.ID" aria-expanded="false" data-parent="#myaccordion">

                    More
                </button>


            </td>
        </tr>
        <tr>

            <td colspan="5">
                <div class="card-body collapse hile" data-toggle="collapse" aria-expanded="false" id="@item.ID">
                    @Html.Action("ListOrderDetailClient", "JewelryStore", new { id = item.ID })
                </div>
            </td>
        </tr>
    }
</table>



