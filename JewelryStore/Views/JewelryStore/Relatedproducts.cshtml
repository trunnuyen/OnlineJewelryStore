
@model IEnumerable<JewelryStore.Models.Item>

<section class="similar_product_area p_100">
    <div class="container">

        <div class="main_title">
            <h2>Similar Products</h2>
        </div>

        <div class="row similar_product_inner">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="cake_feature_item">
                        <a href="@Url.Action("Detail","JewelryStore",new { id=item.ID})">
                            <div class="cake_img">
                                <img class="resize-image" src="~/img/Item/@item.Picture" alt="">

                            </div>
                        </a>
                        <div class="cake_text">
                            <h4>@Html.DisplayFor(modelItem => item.SellPrice)</h4>
                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                            <a class="pest_btn" href="#">Add to cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>
</section>
<!--================End Similar Product Area =================-->
