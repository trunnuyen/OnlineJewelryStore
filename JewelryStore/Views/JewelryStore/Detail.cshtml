@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}



<section class="product_details_area p_100">
    <div class="container">
        <div class="row product_d_price">
            <div class="col-lg-6">

                <img class="resize-image-detail" src="~/img/Item/@Model.Picture" alt="">


            </div>
            <div class="col-lg-6">
                <div class="product_details_text">
                    <h4>@Model.Name</h4>
                    <p>@Model.ShortTitle</p>
                    <h5>Price :<span>$ @Model.SellPrice</span></h5>
                    <div class="quantity_box">
                        <label for="quantity">Quantity :</label>
                        <input type="number" min="1" max="10" value="1" id="quantity">
                    </div>
                    @if (Model.Quantity == 0)
                    {<a class="pink_more disabled">Add to Cart</a> }
                    else
                    {<a class="pink_more" href="@Url.Action("AddtoCart","Cart",new {@id=@Model.ID,@strURL=Request.Url.ToString() })">Add to Cart</a>}

                </div>
            </div>
        </div>
        <div class="product_tab_area">
