@model IEnumerable<JewelryStore.Models.Item>
@{
	ViewBag.Title = "Itemunactive";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h2 class="text-center">Item</h2>
		
	</div>
	<div class="card-body" style="background-color:#33475b">
		<div class="table-responsive">
			<table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th width="10%">
							@Html.DisplayNameFor(model => model.Picture)
						</th>
						<th width="8%">Name</th>


						<th width="12%">
							@Html.DisplayNameFor(model => model.SellPrice)
						</th>
						<th width="11%">
							@Html.DisplayNameFor(model => model.DateImport)
						</th>
						<th width="10%">
							@Html.DisplayNameFor(model => model.Quantity)
						</th>

						<th>
							@Html.DisplayNameFor(model => model.ShortTitle)
						</th>

						<th>
							Brand
						</th>
						<th>
							Type
						</th>
						<th>
							Status
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								<img width="100" height="100" src="~/img/Item/@Html.DisplayFor(modelItem => item.Picture)" />
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>

							<td>
								$ @Html.DisplayFor(modelItem => item.SellPrice)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DateImport)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Quantity)
							</td>


							<td>
								@Html.DisplayFor(modelItem => item.ShortTitle)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.Brand.Name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ItemType.TypeName)
							</td>
							<td>
								@if (item.Active == true)
								{
									<p style="color:#10de34">Active</p>
								}
								else
								{
									<p style="color:#eb560b">Unactive</p>
								}
							</td>
							<td>
								@Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "	far fa-edit btn btn-outline-success" }) |
								@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-outline-success" }) |
								@*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
								@Html.ActionLink("Active", "Active", new { id = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this article?');", @class = "btn btn-success" })
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


