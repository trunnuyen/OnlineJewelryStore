@model IEnumerable<JewelryStore.Models.Blogs>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h2 class="text-center">Item</h2>
		<p>
			@Html.ActionLink("Create New", "Create")
		</p>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Picture)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Title)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.DateImport)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Describe)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ShortTitle)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>

					@foreach (var item in Model)
					{
						<tr>
							<td>
							<img width="100" height="100" src="~/img/Item/@Html.DisplayFor(modelItem => item.Picture)"/>	
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Title)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DateImport)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Describe)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ShortTitle)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
								@Html.ActionLink("Details", "Details", new { id = item.ID }) |
								@Html.ActionLink("Delete", "Delete", new { id = item.ID })
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>